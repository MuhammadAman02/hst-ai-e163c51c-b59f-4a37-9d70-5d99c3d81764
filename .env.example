# Apple Store Application Configuration

# Application Settings
APP_NAME="Apple Store"
APP_DESCRIPTION="Premium Apple Products Store"
APP_VERSION="1.0.0"
DEBUG=False

# Server Configuration
HOST=0.0.0.0
PORT=8000
API_PREFIX=/api

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite:///./data/apple_store.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/apple_store.log

# File Uploads
MAX_FILE_SIZE=10485760
UPLOAD_DIRECTORY=./app/static/uploads